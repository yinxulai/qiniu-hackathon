{
  "compilerOptions": {
    "target": "ESNext",
    "module": "node16",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "moduleResolution": "node16",
    "paths": {
      "@server/*": ["./server/*"],
      "@view/*": ["./view/*"]
    }
  }
}
